<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.group10.cms.student.DashboardController"
            prefWidth="600.0" prefHeight="400.0">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <top>
        <Label text="Student Dashboard" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-padding: 15;" BorderPane.alignment="CENTER" />
    </top>

    <left>
        <VBox alignment="TOP_CENTER" spacing="10" BorderPane.alignment="CENTER">
            <ImageView fx:id="profileImage" fitWidth="150.0" fitHeight="150.0" preserveRatio="true" />
            <padding>
                <Insets right="20.0" />
            </padding>
        </VBox>
    </left>

    <center>
        <GridPane hgap="10.0" vgap="15.0">
            <Label text="Registration No:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <Label fx:id="regnoLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Name:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <Label fx:id="nameLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Roll No:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <Label fx:id="rollnoLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Course:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <Label fx:id="courseLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Semester:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <Label fx:id="semesterLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Date of Birth:" GridPane.rowIndex="5" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <Label fx:id="dobLabel" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label text="Address:" GridPane.rowIndex="6" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <Label fx:id="addressLabel" wrapText="true" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
        </GridPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" prefHeight="50.0" spacing="10.0">
            <Button text="Edit Profile" onAction="#handleEditProfile" />
            <Button text="Logout" onAction="#handleLogout" />
        </HBox>
    </bottom>
</BorderPane>